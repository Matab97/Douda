<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType = "centerCrop"
    tools:context=".MarketActivity">


    <Button
        android:id="@+id/boardButton"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginBottom="283dp"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="99dp"
        android:onClick="boardshop"
        android:text="boards"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreView" />

    <Button
        android:id="@+id/pieceButton"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginBottom="248dp"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="48dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="268dp"
        android:onClick="pieceshop"
        android:text="pieces"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boardButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/scoreView"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_marginBottom="99dp"
        android:layout_marginEnd="164dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="164dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="96dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/boardButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>